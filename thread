@Override
public RepeatStatus execute(StepContribution contribution, ChunkContext chunkContext) throws Exception {
    LOGGER.info("Delay Step Started with initialDelay: {}", initialDelay);

    long start = System.currentTimeMillis();
    while (System.currentTimeMillis() - start < TimeUnit.SECONDS.toMillis(5)) {
        if (Thread.currentThread().isInterrupted()) {
            LOGGER.warn("Thread was interrupted during delay.");
            Thread.currentThread().interrupt();
            return RepeatStatus.FINISHED;
        }
        Thread.sleep(500); // Sleep in smaller intervals
    }

    LOGGER.info("Delay Step Ended");
    return RepeatStatus.FINISHED;
}
